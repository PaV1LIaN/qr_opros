<?php global $USER; if ($USER->IsAdmin()): ?>
<form method="post">
    <?=bitrix_sessid_post()?>

    <input type="text" name="SITE_TITLE" placeholder="Название сайта (русское)" required><br><br>
    <input type="text" name="SITE_CODE" placeholder="Код сайта (латиница, если пусто — сгенерируется)"><br><br>

    <input type="text" name="ROLE_NAME" placeholder="Название роли (например: Модераторы сайта)" required><br><br>

    <h3>Добавить пользователей в роль:</h3>
    <select name="ROLE_USERS[]" multiple size="5" style="min-width:250px;">
        <?php
        $rsUsers = CUser::GetList($by="id", $order="asc", ["ACTIVE" => "Y"]);
        while ($user = $rsUsers->Fetch()):
        ?>
            <option value="<?=$user["ID"]?>"><?=$user["NAME"]?> <?=$user["LAST_NAME"]?></option>
        <?php endwhile; ?>
    </select>

    <br><br>
    <button type="submit">Создать сайт</button>
</form>
<?php endif; ?>
