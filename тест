      </colgroup>';

echo '<thead>
        <tr>
          <th scope="col">Номер</th>
          <th scope="col">Создан</th>
          <th scope="col">Инициатор</th>
          <th scope="col">Цех/Отдел</th>
          <th scope="col">Наименование детали</th>
          <th scope="col">Номер детали</th>
