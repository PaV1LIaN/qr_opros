<?php
require($_SERVER["DOCUMENT_ROOT"] . "/bitrix/header.php");

use Bitrix\Main\Context;
use Bitrix\Main\UI\Extension;

global $USER, $APPLICATION;

Extension::load([
    "ui.buttons",
    "ui.alerts",
    "ui.icons",
    "ui.fonts.opensans",
    "main.popup",
]);

$APPLICATION->SetAdditionalCSS("/local/typical_sites/assets/admin.css");

require_once $_SERVER["DOCUMENT_ROOT"] . "/local/typical_sites/lib/SiteService.php";

$request = Context::getCurrent()->getRequest();
$code = trim((string)$request->getQuery('code'));

if ($code === '') {
    ShowError("Не указан code");
    require($_SERVER["DOCUMENT_ROOT"] . "/bitrix/footer.php");
    exit;
}

if (!$USER->IsAuthorized()) {
    ShowError("Требуется авторизация");
    require($_SERVER["DOCUMENT_ROOT"] . "/bitrix/footer.php");
    exit;
}

$service = new \Cc10\SiteService();
$site = $service->getSiteByCode($code);

if (!$site) {
    ShowError("Сайт не найден");
    require($_SERVER["DOCUMENT_ROOT"] . "/bitrix/footer.php");
    exit;
}

$siteId = (int)$site['ID'];
$role = $service->getUserRole((int)$USER->GetID(), $siteId);

if (!$USER->IsAdmin() && !in_array($role, ['ADMIN', 'DEVELOPER'], true)) {
    ShowError("Нет прав на управление страницами");
    require($_SERVER["DOCUMENT_ROOT"] . "/bitrix/footer.php");
    exit;
}

$APPLICATION->SetTitle("Страницы: " . (string)$site['UF_NAME']);

$errors = [];

// POST actions: enable/disable/delete
if ($request->isPost() && check_bitrix_sessid()) {
    $action = (string)$request->getPost('action');
    $pageId = (int)$request->getPost('page_id');

    try {
        if ($pageId <= 0) {
            throw new \InvalidArgumentException("Некорректный page_id");
        }

        if ($action === 'enable') {
            $service->setPageActive($pageId, $siteId, true);
            $service->logAction($siteId, (int)$USER->GetID(), 'PAGE_ENABLE', 'page', $pageId, []);
        } elseif ($action === 'disable') {
            $service->setPageActive($pageId, $siteId, false);
            $service->logAction($siteId, (int)$USER->GetID(), 'PAGE_DISABLE', 'page', $pageId, []);
        } elseif ($action === 'delete') {
            if (method_exists($service, 'softDeletePage')) {
                $service->softDeletePage($pageId, $siteId, (int)$USER->GetID());
                $service->logAction($siteId, (int)$USER->GetID(), 'PAGE_DELETE', 'page', $pageId, ['soft' => true]);
            } else {
                $service->deletePage($pageId, $siteId);
                $service->logAction($siteId, (int)$USER->GetID(), 'PAGE_DELETE', 'page', $pageId, ['soft' => false]);
            }
        }

        LocalRedirect('/local/typical_sites/pages.php?code=' . urlencode($code));
    } catch (\Throwable $e) {
        $errors[] = $e->getMessage();
    }
}

// list
$pages = $service->getPagesForSite($siteId, false);

$totalCnt = count($pages);
$activeCnt = 0;
foreach ($pages as $p) if (!empty($p['UF_ACTIVE'])) $activeCnt++;
$offCnt = $totalCnt - $activeCnt;
?>

<div class="ts-page">

  <div class="ts-hero">
    <div class="ts-heroTop">
      <div>
        <h1 class="ts-title">Страницы сайта: <?= htmlspecialcharsbx((string)$site['UF_NAME']) ?></h1>
        <div class="ts-sub">Откат ссылок на режим site.php?code=...&page=...</div>
      </div>

      <div class="ts-actions">
        <a class="ui-btn ts-ghost" href="/local/typical_sites/admin.php">К сайтам</a>
        <a class="ui-btn ts-ghost" href="/local/typical_sites/site.php?code=<?= urlencode($code) ?>" target="_blank">Открыть сайт</a>
        <a class="ui-btn ui-btn-icon-add ts-primary" href="/local/typical_sites/page_edit.php?code=<?= urlencode($code) ?>">Создать страницу</a>
      </div>
    </div>

    <div class="ts-grid">
      <div class="ts-stat">
        <div class="k">Всего страниц</div>
        <div class="v"><?= (int)$totalCnt ?></div>
        <div class="hint">включая выключенные</div>
      </div>
      <div class="ts-stat">
        <div class="k">Активные</div>
        <div class="v" style="color:var(--ok);"><?= (int)$activeCnt ?></div>
        <div class="hint">видны пользователям</div>
      </div>
      <div class="ts-stat">
        <div class="k">Выключенные</div>
        <div class="v" style="color:var(--warn);"><?= (int)$offCnt ?></div>
        <div class="hint">скрыты</div>
      </div>
    </div>
  </div>

  <?php if (!empty($errors)): ?>
    <div class="ui-alert ui-alert-danger">
      <span class="ui-alert-message">
        <?php foreach ($errors as $e): ?>
          <div><?= htmlspecialcharsbx($e) ?></div>
        <?php endforeach; ?>
      </span>
    </div>
  <?php endif; ?>

  <div class="ts-toolbar">
    <input class="ts-input" type="text" id="ts-search" placeholder="Поиск по заголовку или SLUG...">
    <button type="button" class="ts-chip is-active" data-filter="all">
      <span class="ts-dot all"></span> Все <b><?= (int)$totalCnt ?></b>
    </button>
    <button type="button" class="ts-chip" data-filter="active">
      <span class="ts-dot ok"></span> Active <b><?= (int)$activeCnt ?></b>
    </button>
    <button type="button" class="ts-chip" data-filter="off">
      <span class="ts-dot off"></span> Off <b><?= (int)$offCnt ?></b>
    </button>
    <span class="ts-pill" style="margin-left:auto;">
      Показано: <b id="ts-count"><?= (int)$totalCnt ?></b>
    </span>
  </div>

  <?php if (empty($pages)): ?>
    <div class="ui-alert ui-alert-warning">
      <span class="ui-alert-message">Страниц пока нет.</span>
    </div>
  <?php else: ?>
    <div class="ts-tableWrap">
      <table class="ts-table" id="ts-table">
        <thead>
          <tr>
            <th style="width:70px;" data-sort="id" class="ts-sort">ID</th>
            <th data-sort="title" class="ts-sort">Заголовок</th>
            <th style="width:170px;" data-sort="slug" class="ts-sort">SLUG</th>
            <th style="width:90px;" data-sort="sort" class="ts-sort">SORT</th>
            <th style="width:120px;" data-sort="status" class="ts-sort">Статус</th>
            <th style="width:380px;">Действия</th>
          </tr>
        </thead>
        <tbody>
          <?php foreach ($pages as $p): ?>
            <?php
              $pageId = (int)$p['ID'];
              $title = (string)$p['UF_TITLE'];
              $slug = (string)$p['UF_SLUG'];
              $sort = (int)$p['UF_SORT'];
              $isActive = !empty($p['UF_ACTIVE']);

              $openUrl = '/local/typical_sites/site.php?code=' . urlencode($code) . '&page=' . urlencode($slug);
              $blocksUrl = '/local/typical_sites/blocks.php?code=' . urlencode($code) . '&page_id=' . $pageId;
              $editUrl = '/local/typical_sites/page_edit.php?code=' . urlencode($code) . '&page_id=' . $pageId;

              $searchKey = mb_strtolower(trim($title . ' ' . $slug));
            ?>
            <tr class="ts-row"
                data-search="<?= htmlspecialcharsbx($searchKey) ?>"
                data-status="<?= ($isActive ? 'active' : 'off') ?>"
                data-id="<?= $pageId ?>"
                data-title="<?= htmlspecialcharsbx(mb_strtolower($title)) ?>"
                data-slug="<?= htmlspecialcharsbx(mb_strtolower($slug)) ?>"
                data-sort="<?= (int)$sort ?>">
              <td><?= $pageId ?></td>
              <td><?= htmlspecialcharsbx($title) ?></td>
              <td><span class="ts-code"><?= htmlspecialcharsbx($slug) ?></span></td>
              <td><?= (int)$sort ?></td>
              <td>
                <?php if ($isActive): ?>
                  <span class="ts-pill ok"><span class="dot"></span> ACTIVE</span>
                <?php else: ?>
                  <span class="ts-pill off"><span class="dot"></span> OFF</span>
                <?php endif; ?>
              </td>
              <td>
                <div class="ts-actionsRow">
                  <button type="button"
                          class="ui-btn ui-btn-icon-more ts-menu-btn ts-action ts-more"
                          data-page-id="<?= $pageId ?>"
                          data-open-url="<?= htmlspecialcharsbx($openUrl) ?>"
                          data-edit-url="<?= htmlspecialcharsbx($editUrl) ?>"
                          data-blocks-url="<?= htmlspecialcharsbx($blocksUrl) ?>"
                          data-slug="<?= htmlspecialcharsbx($slug) ?>">
                          ...
                  </button>

                  <form method="post" style="display:inline;">
                    <?= bitrix_sessid_post() ?>
                    <input type="hidden" name="page_id" value="<?= $pageId ?>">
                    <?php if ($isActive): ?>
                      <button class="ui-btn ts-action" type="submit" name="action" value="disable">Выключить</button>
                    <?php else: ?>
                      <button class="ui-btn ts-action" type="submit" name="action" value="enable">Включить</button>
                    <?php endif; ?>
                  </form>

                  <form method="post" style="display:inline;" onsubmit="return confirm('Удалить страницу?');">
                    <?= bitrix_sessid_post() ?>
                    <input type="hidden" name="page_id" value="<?= $pageId ?>">
                    <button class="ui-btn ts-danger" type="submit" name="action" value="delete">Удалить</button>
                  </form>
                </div>
              </td>
            </tr>
          <?php endforeach; ?>
        </tbody>
      </table>
    </div>
  <?php endif; ?>

</div>

<script>
(function(){
  const input = document.getElementById('ts-search');
  const rows = Array.from(document.querySelectorAll('tr.ts-row'));
  const cnt = document.getElementById('ts-count');
  const chips = Array.from(document.querySelectorAll('.ts-chip'));
  let statusFilter = 'all';

  function apply(){
    const q = (input.value || '').toLowerCase().trim();
    let shown = 0;

    rows.forEach(r => {
      const key = (r.getAttribute('data-search') || '');
      const st = (r.getAttribute('data-status') || 'off');
      const okSearch = (q === '' || key.includes(q));
      const okStatus = (statusFilter === 'all' || st === statusFilter);
      const ok = okSearch && okStatus;

      r.style.display = ok ? '' : 'none';
      if (ok) shown++;
    });

    if (cnt) cnt.textContent = shown;
  }

  chips.forEach(ch => {
    ch.addEventListener('click', () => {
      chips.forEach(x => x.classList.remove('is-active'));
      ch.classList.add('is-active');
      statusFilter = ch.getAttribute('data-filter') || 'all';
      apply();
    });
  });

  if (input) input.addEventListener('input', apply);

  function copyText(text){
    if (navigator.clipboard && navigator.clipboard.writeText) {
      return navigator.clipboard.writeText(text);
    }
    return new Promise((resolve) => {
      const ta = document.createElement('textarea');
      ta.value = text;
      document.body.appendChild(ta);
      ta.select();
      document.execCommand('copy');
      document.body.removeChild(ta);
      resolve();
    });
  }

  if (window.BX && BX.ready) {
    BX.ready(function(){
      document.querySelectorAll('.ts-menu-btn').forEach(function(btn){
        btn.addEventListener('click', function(){
          const openUrl = btn.getAttribute('data-open-url') || '';
          const editUrl = btn.getAttribute('data-edit-url') || '';
          const blocksUrl = btn.getAttribute('data-blocks-url') || '';
          const slug = btn.getAttribute('data-slug') || '';
          const id = btn.getAttribute('data-page-id') || '0';

          const items = [
            { text: 'Открыть страницу', onclick: function(){ window.open(openUrl, '_blank'); this.popupWindow.close(); } },
            { delimiter: true },
            { text: 'Редактировать', onclick: function(){ window.location.href = editUrl; this.popupWindow.close(); } },
            { text: 'Блоки', onclick: function(){ window.location.href = blocksUrl; this.popupWindow.close(); } },
            { delimiter: true },
            { text: 'Скопировать ссылку', onclick: function(){ copyText(openUrl).then(()=>{}); this.popupWindow.close(); } },
            { text: 'Скопировать SLUG', onclick: function(){ copyText(slug).then(()=>{}); this.popupWindow.close(); } },
          ];

          BX.PopupMenu.show(
            'ts_page_menu_' + id,
            btn,
            items,
            { autoHide:true, closeByEsc:true, offsetTop:6, angle:true }
          );
        });
      });
    });
  }

  const table = document.getElementById('ts-table');
  if (table) {
    let sortDir = 'asc';

    function sortRows(key){
      sortDir = (sortDir === 'asc') ? 'desc' : 'asc';

      table.querySelectorAll('th.ts-sort').forEach(th => th.classList.remove('is-sort-asc','is-sort-desc'));
      const activeTh = table.querySelector('th.ts-sort[data-sort="'+ key +'"]');
      if (activeTh) activeTh.classList.add(sortDir === 'asc' ? 'is-sort-asc' : 'is-sort-desc');

      rows.sort((a,b) => {
        const dir = (sortDir === 'asc') ? 1 : -1;

        if (key === 'id') return dir * ((+a.dataset.id) - (+b.dataset.id));
        if (key === 'sort') return dir * ((+a.dataset.sort) - (+b.dataset.sort));
        if (key === 'status') return dir * ((a.dataset.status || '').localeCompare(b.dataset.status || ''));

        const av = (a.dataset[key] || '');
        const bv = (b.dataset[key] || '');
        return dir * av.localeCompare(bv);
      });

      const tbody = table.querySelector('tbody');
      rows.forEach(r => tbody.appendChild(r));
      apply();
    }

    table.querySelectorAll('th.ts-sort').forEach(th => {
      th.style.cursor = 'pointer';
      th.title = 'Нажми для сортировки';
      th.addEventListener('click', () => sortRows(th.getAttribute('data-sort')));
    });
  }
})();
</script>

<?php
require($_SERVER["DOCUMENT_ROOT"] . "/bitrix/footer.php");
