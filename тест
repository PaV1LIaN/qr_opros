echo '<table class="lab-table">';
echo '<colgroup>
        <col class="col-id">
        <col class="col-created">
        <col class="col-init">
        <col class="col-dept">
        <col class="col-name">
        <col class="col-num">
        <col class="col-date">
        <col class="col-status">
