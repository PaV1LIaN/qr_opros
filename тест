// ===== ПЕЧАТЬ QR =====
$(document).on('click', '.print-btn', function() {
    const card = $(this).closest('.card');
    const printArea = card.find('.print-area').html();

    let printWindow = window.open('', '', 'width=600,height=600');
    printWindow.document.write(`
        <html>
        <head>
            <title>Печать QR</title>
            <style>
                body { text-align: center; font-family: Arial; }
                img { width: 260px; height: 260px; margin-bottom: 12px; }
                h2 { margin: 6px 0; }
                h3 { margin: 4px 0; font-weight: normal; }
            </style>
        </head>
        <body>
            ${printArea}
        </body>
        </html>
    `);

    printWindow.document.close();
    printWindow.focus();
    setTimeout(() => {
        printWindow.print();
        printWindow.close();
    }, 200);
});
