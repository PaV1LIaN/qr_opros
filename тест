<?php global $USER; if ($USER->IsAdmin()): ?>
<form method="post">
    <?=bitrix_sessid_post()?>
    <input type="text" name="SITE_TITLE" placeholder="Название сайта (русское)" required>
    <input type="text" name="SITE_CODE" placeholder="Код сайта (латиница, если пусто — сгенерируется)">
    
    <h3>Группы пользователей с доступом:</h3>
    <?php
    $rsGroups = CGroup::GetList($by="c_sort", $order="asc", []);
    while ($group = $rsGroups->Fetch()):
        if ($group["ID"] == 1) continue;
    ?>
        <label>
            <input type="checkbox" name="SITE_GROUPS[]" value="<?=$group["ID"]?>">
            <?=$group["NAME"]?>
        </label><br>
    <?php endwhile; ?>

    <h3>Пользователи с доступом:</h3>
    <select name="SITE_USERS[]" multiple size="5">
        <?php
        $rsUsers = CUser::GetList($by="id", $order="asc", ["ACTIVE" => "Y"]);
        while ($user = $rsUsers->Fetch()):
        ?>
            <option value="<?=$user["ID"]?>"><?=$user["NAME"]?> <?=$user["LAST_NAME"]?></option>
        <?php endwhile; ?>
    </select>

    <br><br>
    <button type="submit">Создать сайт</button>
</form>
<?php endif; ?>
