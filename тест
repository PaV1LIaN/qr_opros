<!-- Замените example.bitrix24.ru на ваш домен Битрикс24 -->
<script src="https://example.bitrix24.ru/bitrix/js/crm/form_loader.js"></script>
<script>
  document.addEventListener('DOMContentLoaded', function() {
    if (window.BX24 && BX24.Crm && BX24.Crm.FormManager) {
      BX24.Crm.FormManager.render({
        node: document.getElementById('bitrix24-form-container'),
        formId: '<?=CUtil::JSEscape($arResult['FORM_ID'])?>',
        lang: 'ru'
      });
    } else {
      console.error('CRM FormManager не загружен');
    }
  });
</script>

