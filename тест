<?php
require_once($_SERVER['DOCUMENT_ROOT'].'/bitrix/header.php');
require_once $_SERVER['DOCUMENT_ROOT'].'/local/php_interface/lib/lab_groups.php';
require_once $_SERVER['DOCUMENT_ROOT'].'/local/php_interface/lib/lab_acl.php';

// Доступ: админ или менеджер
lab_require_any_role(['admin','manager']);

$APPLICATION->SetTitle("Добавить подразделение");

\Bitrix\Main\Loader::includeModule('iblock');

$iblockId = 35; // ID инфоблока «Блоки лаборатории»
$errors = [];

// Обработка отправки формы
if ($_SERVER['REQUEST_METHOD'] === 'POST' && check_bitrix_sessid()) {
    $parentId    = (int)($_POST['PARENT_ID'] ?? 0);
    $name        = trim((string)($_POST['NAME'] ?? ''));
    $description = trim((string)($_POST['DESCRIPTION'] ?? ''));

    if ($parentId <= 0) $errors[] = "Нужно выбрать компанию-родителя.";
    if ($name === "")   $errors[] = "Введите название подразделения.";

    if (empty($errors)) {
        $bs = new CIBlockSection;

        $arFields = [
            "ACTIVE"            => "Y",
            "IBLOCK_ID"         => $iblockId,
            "NAME"              => $name,
            "DESCRIPTION"       => $description,
            "IBLOCK_SECTION_ID" => $parentId,
        ];

        $newId = (int)$bs->Add($arFields);

        if ($newId > 0) {

            // Группа лаборантов конкретной лаборатории
            $groupName = "Лаборант " . $name;
            $stringId  = "lab_asst_lab_" . (int)$newId;

            try {
                $assistantGroupId = lab_group_create_if_not_exists(
                    $groupName,
                    $stringId,
                    "Лаборанты лаборатории: " . $name
                );

                // Записываем ID группы в UF раздела лаборатории (нужно UF_ASSISTANT_GROUP_ID)
                $bs->Update((int)$newId, [
                    "UF_ASSISTANT_GROUP_ID" => (int)$assistantGroupId,
                ]);

                // УСПЕХ — редиректим один раз
                LocalRedirect("/local/glab/index.php?sub_added=Y");

            } catch (Throwable $e) {
                // Секция создана, но группа/UF не создались — показываем ошибку, НЕ редиректим
                $errors[] = "Лаборатория создана (ID={$newId}), но не удалось создать группу лаборантов/привязать UF: "
                          . $e->getMessage();
            }

        } else {
            $errors[] = "Ошибка при добавлении: " . $bs->LAST_ERROR;
        }
    }
}

// Получим список компаний (разделов верхнего уровня)
$rs = CIBlockSection::GetList(
    ["NAME"=>"ASC"],
    ["IBLOCK_ID"=>$iblockId, "SECTION_ID"=>0, "ACTIVE"=>"Y"],
    false,
    ["ID","NAME"]
);
$companies = [];
while ($row = $rs->Fetch()) {
    $companies[$row['ID']] = $row['NAME'];
}
?>

<div class="lab-page-wrap">
    <h2 class="lab-page-title">Добавить подразделение</h2>

    <?php if (!empty($errors)): ?>
        <div class="lab-alert lab-alert--error">
            <?php foreach ($errors as $e): ?>
                <div><?= htmlspecialcharsbx($e) ?></div>
            <?php endforeach; ?>
        </div>
    <?php endif; ?>

    <div class="lab-card">
        <form method="post" class="lab-form">
            <?= bitrix_sessid_post() ?>

            <div class="lab-field">
                <label class="lab-label">Компания-родитель</label>
                <select class="lab-select" name="PARENT_ID">
                    <option value="">-- выберите компанию --</option>
                    <?php foreach ($companies as $id => $nm): ?>
                        <option value="<?= (int)$id ?>"
                          <?= ((string)($_POST['PARENT_ID'] ?? '') === (string)$id ? 'selected' : '') ?>>
                          <?= htmlspecialcharsbx($nm) ?>
                        </option>
                    <?php endforeach; ?>
                </select>
            </div>

            <div class="lab-field">
                <label class="lab-label">Название подразделения</label>
                <input class="lab-input" type="text" name="NAME"
                       value="<?= htmlspecialcharsbx($_POST['NAME'] ?? '') ?>">
            </div>

            <div class="lab-field">
                <label class="lab-label">Описание</label>
                <textarea class="lab-textarea" name="DESCRIPTION"><?= htmlspecialcharsbx($_POST['DESCRIPTION'] ?? '') ?></textarea>
            </div>

            <div class="lab-actions">
                <button class="lab-btn" type="submit">Добавить</button>
                <a class="lab-btn lab-btn--ghost" href="/local/glab/index.php">Отмена</a>
            </div>
        </form>
    </div>
</div>

<style>
