        <col class="c-act">
      </colgroup>';

echo '<thead>
        <tr>
          <th scope="col">Номер</th>
          <th scope="col">Создан</th>
          <th scope="col">Инициатор</th>
          <th scope="col">Цех/Отдел</th>
          <th scope="col">Наименование детали</th>
          <th scope="col">Номер детали</th>
          <th scope="col">Дата изготовл.</th>
          <th scope="col">Статус</th>
          <th scope="col">Действие</th>
        </tr>
      </thead>';

echo '<tbody>';

foreach ($rows as $r) {
    $id = (int)($r['id'] ?? 0);
    $initiator = userNameById((int)($r['user_id'] ?? 0));

    $createdAtRaw = (string)($r['created_at'] ?? '');
    $createdAt = $createdAtRaw ? date('d.m.Y H:i', strtotime($createdAtRaw)) : '—';

    $dateManRaw = (string)($r['date_man'] ?? '');
    $dateMan = $dateManRaw ? date('d.m.Y', strtotime($dateManRaw)) : '—';

    $status = (string)($r['status'] ?? '');
    $st = strtoupper(trim($status));

    $dept = trim((string)($r['work_department'] ?? ''));
    $name = trim((string)($r['name_izd'] ?? ''));
    $num  = trim((string)($r['id_i'] ?? ''));

    $actHtml = '<div class="act">';
    if ($st === 'NEW') {
        $actHtml .= '<a class="iconbtn iconbtn--edit" href="edit.php?id='.$id.'" title="Редактировать">'.$svgEdit.'</a>';
        $actHtml .= '<a class="iconbtn iconbtn--ok" href="index.php?action=approve&id='.$id.'&sessid='.bitrix_sessid().'" title="Оформить">'.$svgOk.'</a>';
    } else {
        $actHtml .= '<a class="iconbtn iconbtn--folder" href="files.php?id='.$id.'" title="Папка">'.$svgFold.'</a>';
    }
    $actHtml .= '</div>';

    $searchStr = mb_strtolower(trim(implode(' ', [
        (string)$id,
        $createdAt,
        $initiator,
        $dept,
        $name,
        $num,
        $dateMan,
        $status
    ])));

    echo '<tr'
        .' data-status="'.h($st).'"'
        .' data-dept="'.h($dept).'"'
        .' data-search="'.h($searchStr).'"'
        .'>';

    echo '  <td><b>'.(int)$id.'</b></td>';
    echo '  <td>'.h($createdAt).'</td>';
    echo '  <td title="'.h($initiator).'">'.h($initiator ?: '—').'</td>';
    echo '  <td title="'.h($dept).'">'.h($dept ?: '—').'</td>';
    echo '  <td title="'.h($name).'">'.h($name ?: '—').'</td>';
    echo '  <td title="'.h($num).'">'.h($num ?: '—').'</td>';
    echo '  <td>'.h($dateMan).'</td>';
    echo '  <td>'.statusBadgeHtml($status).'</td>';
    echo '  <td class="td-act">'.$actHtml.'</td>';
    echo '</tr>';
}

echo '</tbody></table>';

echo '  </div>'; // card
echo '</div>';   // wrap

// --- JS: поиск + фильтры ---
echo '
<script>
(function(){
  const searchEl = document.getElementById("labSearch");
  const statusEl = document.getElementById("labStatus");
  const deptEl   = document.getElementById("labDept");
  const clearEl  = document.getElementById("labClear");
  const table    = document.getElementById("labTable");
  const visibleEl= document.getElementById("labVisibleCount");
  const activeEl = document.getElementById("labActiveFilters");

  if (!table) return;
  const rows = Array.from(table.querySelectorAll("tbody tr"));

  function normalize(s){
    return (s || "").toString().trim().toLowerCase();
  }

  function apply(){
    const q = normalize(searchEl ? searchEl.value : "");
    const st = (statusEl ? statusEl.value : "").toString().trim();
    const dp = (deptEl ? deptEl.value : "").toString().trim();

    let visible = 0;

    rows.forEach(tr => {
      const rowSt = tr.getAttribute("data-status") || "";
      const rowDp = tr.getAttribute("data-dept") || "";
      const rowSearch = (tr.getAttribute("data-search") || "").toLowerCase();

      const okQ  = !q  || rowSearch.indexOf(q) !== -1;
      const okSt = !st || rowSt === st;
      const okDp = !dp || rowDp === dp;

      const show = okQ && okSt && okDp;
      tr.style.display = show ? "" : "none";
      if (show) visible++;
    });

    if (visibleEl) visibleEl.textContent = String(visible);

    let active = 0;
    if (q) active++;
    if (st) active++;
    if (dp) active++;
    if (activeEl) activeEl.textContent = String(active);
  }

  function clearAll(){
    if (searchEl) searchEl.value = "";
    if (statusEl) statusEl.value = "";
    if (deptEl) deptEl.value = "";
    apply();
    if (searchEl) searchEl.focus();
  }

  if (searchEl) searchEl.addEventListener("input", apply);
  if (statusEl) statusEl.addEventListener("change", apply);
  if (deptEl) deptEl.addEventListener("change", apply);
  if (clearEl) clearEl.addEventListener("click", clearAll);

  apply();
})();
</script>
';

require_once($_SERVER['DOCUMENT_ROOT'].'/bitrix/footer.php');
?>
