          <th scope="col">Статус</th>
          <th scope="col">Действие</th>
        </tr>
      </thead>';

echo '<tbody>';

foreach ($rows as $r) {
    $id = (int)($r['id'] ?? 0);
    $initiator = userNameById((int)($r['user_id'] ?? 0));

    $createdAt = $r['created_at'] ?? '';
    $createdAt = $createdAt ? date('d.m.Y H:i', strtotime($createdAt)) : '—';

    $dateMan = $r['date_man'] ?? '';
    $dateMan = $dateMan ? date('d.m.Y', strtotime($dateMan)) : '—';

    $status = (string)($r['status'] ?? '');
    $st = strtoupper(trim($status));

    $actionBtn = '';
    $confirmBtn = '';
    $folderBtn = '';

    if ($st === 'NEW') {
        $actionBtn  = '<a class="btn btn--ghost" href="edit.php?id='.$id.'">Редактировать</a>';
        $confirmBtn = '<a class="btn btn--success" href="index.php?action=approve&id='.$id.'&sessid='.bitrix_sessid().'">Оформить</a>';
    } else {
        $folderBtn = '<a class="btn btn--primary" href="files.php?id='.$id.'">Папка</a>';
    }

    $actionsHtml = '<div class="btns">'.$actionBtn.$confirmBtn.$folderBtn.'</div>';

    $dept = (string)($r['work_department'] ?? '');
    $name = (string)($r['name_izd'] ?? '');
    $num  = (string)($r['id_i'] ?? '');

    echo '<tr>';
    echo '  <td><b>'.(int)$id.'</b></td>';
    echo '  <td>'.h($createdAt).'</td>';
    echo '  <td>'.h($initiator ?: '—').'</td>';
    echo '  <td title="'.h($dept).'">'.h($dept ?: '—').'</td>';
