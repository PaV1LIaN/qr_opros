/* группа кнопок в карточке */
.btn-block-group .btn {
    min-width: 90px;
}

.btn-block-group .btn-success {
    box-shadow: 0 6px 18px rgba(34, 197, 94, 0.35);
}

.btn-block-group .btn-outline-warning {
    border-radius: 999px;
}

/* чтобы нижние кнопки не выглядили слишком легкими */
.btn-block-group .btn-outline-light,
.btn-block-group .btn-outline-danger {
    border-width: 1px;
}
