<h2>Список сайтов</h2>
<ul>
<?php foreach ($sites as $site): ?>
    <li style="margin-bottom: 20px;">
        <a href="/local/portal_hub/sites/<?=$site["CODE"]?>/" target="_blank">
            <?=$site["NAME"]?>
        </a>

        <?php if ($USER->IsAdmin() && $site["ROLE_ID"]): ?>
            <?php
            $usersInRole = [];
            $rsUsers = CUser::GetList($by="id", $order="asc", ["GROUPS_ID" => [$site["ROLE_ID"]]]);
            while ($u = $rsUsers->Fetch()) {
                $usersInRole[] = "✅ ".$u["NAME"]." ".$u["LAST_NAME"];
            }
            ?>
            <div id="access-view-<?=$site["ID"]?>" style="margin-left:20px;">
                <strong>Пользователи:</strong> <?= $usersInRole ? implode(", ", $usersInRole) : "никто" ?>
            </div>

            <button type="button" onclick="document.getElementById('edit-<?=$site["ID"]?>').style.display='block'">
                Изменить доступ
            </button>

            <div id="edit-<?=$site["ID"]?>" style="display:none; margin-top:10px;">
                <form onsubmit="return updateAccess<?=$site["ID"]?>(this)">
                    <input type="hidden" name="SITE_ID" value="<?=$site["ID"]?>">
                    <input type="hidden" name="ROLE_ID" value="<?=$site["ROLE_ID"]?>">

                    <h4>Выберите пользователей:</h4>
                    <select name="SITE_USERS[]" multiple size="5">
                        <?php
                        $rsUsers = CUser::GetList($by="id", $order="asc", ["ACTIVE" => "Y"]);
                        while ($user = $rsUsers->Fetch()):
                            $inRole = in_array($site["ROLE_ID"], CUser::GetUserGroup($user["ID"]));
                            $selected = $inRole ? "selected" : "";
                        ?>
                            <option value="<?=$user["ID"]?>" <?=$selected?>><?=$user["NAME"]?> <?=$user["LAST_NAME"]?></option>
                        <?php endwhile; ?>
                    </select>

                    <br><br>
                    <button type="submit">Сохранить</button>
                    <button type="button" onclick="document.getElementById('edit-<?=$site["ID"]?>').style.display='none'">Отмена</button>
                </form>
            </div>

            <script>
            function updateAccess<?=$site["ID"]?>(form) {
                let formData = new FormData(form);
                formData.append("AJAX", "UPDATE_ROLE");

                fetch("<?=$APPLICATION->GetCurPage()?>", {
                    method: "POST",
                    body: formData,
                    headers: { "X-Requested-With": "XMLHttpRequest" }
                })
                .then(r => r.json())
                .then(result => {
                    if (result.success) {
                        document.querySelector("#access-view-<?=$site["ID"]?>").innerHTML =
                            "<strong>Пользователи:</strong> " + result.labels.join(", ");
                        document.getElementById("edit-<?=$site["ID"]?>").style.display = "none";
                    } else {
                        alert("Ошибка: " + (result.message || "Не удалось сохранить"));
                    }
                });
                return false;
            }
            </script>
        <?php endif; ?>
    </li>
<?php endforeach; ?>
</ul>
