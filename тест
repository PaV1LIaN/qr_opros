<?php if (!empty($_GET['warning'])): ?>
<script>
BX.ready(function() {
    const msg = '<?= htmlspecialcharsbx($_GET['warning']) ?>';
    BX.UI.Notification.Center.notify({
        content: '⚠️ ' + BX.util.htmlspecialchars(msg),
        autoHideDelay: 6000,
        position: 'top-right',
        category: 'portal_hub_warning',
        color: 'warning'
    });
});
</script>
<?php endif; ?>
